<?xml version="1.0"?>
<launch>

  <arg name="enable_logging" default="true" />
  <arg name="enable_ground_truth" default="true" />
  <arg name="log_file" default="BlueRov2" />
  <arg name="headless" default="false" />
  <arg name="gui" default="true" />
  <arg name="world_name" default="$(find bluerov_ros_playground)/worlds/ruri_demo.world" />
  <arg name="name" default="BlueRov2" />
  <arg name="model" default="$(find bluerov_ros_playground)/urdfs/BlueRov2.xacro" />
  <arg name="tf_prefix" default="$(optenv ROS_NAMESPACE)" />
  <arg name="debug" default="true" />
  <arg name="verbose" default="true" />

  <arg name="x" default="0.0" />
  <arg name="y" default="0.0" />
  <arg name="z" default="0.0" />
  <arg name="roll" default="0.0" />
  <arg name="pitch" default="0.0" />
  <arg name="yaw" default="0.0" />

  <param name="uuv_robot_description" command="
    $(find xacro)/xacro '$(arg model)'
    enable_logging:=$(arg enable_logging)
    enable_ground_truth:=$(arg enable_ground_truth)
    log_file:=$(arg log_file)"
  />
  <param name="tf_prefix" type="string" value="$(arg tf_prefix)" />
  
  <node name="spawna_bluerov2" pkg="gazebo_ros" type="spawn_model"
    args="-param uuv_robot_description -urdf -x $(arg x) -y $(arg y) -z $(arg z) -R $(arg roll) -P $(arg pitch) -Y $(arg yaw) -model $(arg name)"
    respawn="false" output="screen">
  </node>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="paused" value="false" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="world_name" value="$(arg world_name)" />
  </include>

</launch>
